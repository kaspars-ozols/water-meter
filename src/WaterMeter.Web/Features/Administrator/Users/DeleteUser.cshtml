@using WaterMeter.Web.Features.Administrator.Users
@model WaterMeter.Web.Features.Administrator.Users.DeleteModel

<h1>Delete user</h1>
@using (Html.BeginForm<UserController>(x => x.DeleteUser(Model.Id)))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.FirstName)
    @Html.HiddenFor(x => x.LastName)

    <div class="form-group">
        You are about to delete user: <b>@Model.FirstName @Model.LastName</b>
        <p>
            Are you sure?
        </p>
    </div>
    <div class="form-group">
        @(Html.ActionLink<UserController>("Cancel", x => x.ListUsers(), null, new { @class = "btn btn-default" }))
        <button type="submit" class="btn btn-primary">Yes</button>
    </div>
}