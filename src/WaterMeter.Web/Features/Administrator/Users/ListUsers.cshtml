@using WaterMeter.Web.Features.Administrator.Users
@model WaterMeter.Web.Features.Administrator.Users.ListModel

<h1>Users</h1>

@if (Model == null || !Model.Users.Any())
{
    <p>There are no users</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
                <th>Mobile phone</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.MobilePhone</td>
                    <td>@(Html.ActionLink<UserController>("Edit", x => x.EditUser(user.Id)))</td>
                    <td>@(Html.ActionLink<UserController>("Delete", x => x.DeleteUser(user.Id)))</td>
                </tr>
            }
        </tbody>
    </table>
}
@(Html.ActionLink<UserController>("Create", x => x.CreateUser(), null, new { @class = "btn btn-primary" }))